{% extends 'base.html.twig' %}

{% block title %}
    Product Model
{% endblock %}

{% block body %}
    {% if msg is defined %}
        <div class="alert alert-danger">
            {{msg}}
        </div>
    {% endif %}

    <form action="/person/{{ person.id }}/edit" method="post">
        <div class="mb-3">
            <label for="login" class="form-label">login</label>
            <input type="text" class="form-control" id="login" name="login" required value="{{ person.login }}">
        </div>
        <div class="mb-3">
            <label for="last name" class="form-label">last name</label>
            <input type="text" class="form-control" id="lName" name="lName" required value="{{ person.lName }}">
        </div>
        <div class="mb-3">
            <label for="first name" class="form-label">first name</label>
            <input type="text" class="form-control" id="fName" name="fName" required value="{{ person.fName }}">
        </div>
        <div class="mb-3">
            <select class="form-select" id="state" name="state">
                <option selected>Choose state</option>
                {%  if person.state == 1 %}
                    <option value=1 selected>Active</option>
                {% else %}
                    <option value=1>Active</option>
                {% endif %}
                {%  if person.state == 2 %}
                <option value=2 selected>Banned</option>
                {% else %}
                    <option value=2>Banned</option>
                {% endif %}
                {%  if person.state == 3 %}
                <option value=3 selected>Removed</option>
                {% else %}
                    <option value=1>Removed</option>
                {% endif %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

{% endblock body %}

{% block javascripts %}

{% endblock %}